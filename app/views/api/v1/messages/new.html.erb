<section>
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-5">
        <div class="section">
          <%= form_for(@message, url: api_v1_messages_path, method: :post) do |f| %>

          <div class="field">
            <div class="control">
              <label class="label">メッセージ</label>
              <%= f.text_field :content, class: "input" %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <label class="label">アイコン（http）</label>
              <%= f.text_field :icon, class: "input" %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <label class="label">名前</label>
              <%= f.text_field :name, class: "input" %>
            </div>
          </div>

          <%= f.submit "保存", class: "button is-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
